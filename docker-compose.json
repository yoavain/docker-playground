{
    "version": "3.9",
    "volumes": {
        "dynamodb_data": null,
        "express_logs": null,
        "fastify_logs": null
    },
    "services": {
        "dynamodb": {
            "command": "-jar DynamoDBLocal.jar -sharedDb -dbPath ./data",
            "image": "amazon/dynamodb-local",
            "container_name": "dynamodb",
            "networks": [
                "common"
            ],
            "ports": [
                "8000:8000"
            ],
            "volumes": [
                "dynamodb_data:/home/dynamodblocal/data"
            ],
            "working_dir": "/home/dynamodblocal",
            "user": "root"
        },
        "dynamodb-admin": {
            "image": "aaronshaf/dynamodb-admin",
            "container_name": "dynamodb-admin",
            "networks": [
                "common"
            ],
            "ports": [
                "8001:8001"
            ],
            "environment": {
                "DYNAMO_ENDPOINT": "http://dynamodb:8000",
                "REGION": "us-east-1",
                "AWS_ACCESS_KEY_ID": "local",
                "AWS_SECRET_ACCESS_KEY": "local"
            },
            "depends_on": [
                "dynamodb"
            ]
        },
        "express-server": {
            "build": "./express-server",
            "container_name": "express-server",
            "environment": {
                "DYNAMO_URL": "http://dynamodb:8000",
                "REGION": "us-east-1",
                "AWS_ACCESS_KEY_ID": "local",
                "AWS_SECRET_ACCESS_KEY": "local"
            },
            "networks": [
                "common"
            ],
            "extra_hosts": {
                "host.docker.internal:host-gateway": null
            },
            "ports": [
                "3000:3000"
            ],
            "volumes": [
                "express_logs:/user/app/logs"
            ],
            "depends_on": [
                "dynamodb",
                "db-setup"
            ]
        },
        "fastify-server": {
            "build": "./fastify-server",
            "container_name": "fastify-server",
            "environment": {
                "DYNAMO_URL": "http://dynamodb:8000",
                "REGION": "us-east-1",
                "AWS_ACCESS_KEY_ID": "local",
                "AWS_SECRET_ACCESS_KEY": "local"
            },
            "networks": [
                "common"
            ],
            "extra_hosts": {
                "host.docker.internal:host-gateway": null
            },
            "ports": [
                "3001:3001"
            ],
            "volumes": [
                "fastify_logs:/usr/app/logs"
            ],
            "depends_on": [
                "dynamodb",
                "db-setup"
            ]
        }
    },
    "networks": {
        "common": {
            "name": "common"
        }
    }
}